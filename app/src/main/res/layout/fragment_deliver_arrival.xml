<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/deliver_rc"/>

    <Button
        style="@style/ButtonFontStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:id="@+id/fragment_deliver_arrival_btn_arrival"
        android:background="@drawable/my_button"
        android:text="@string/btn_arrival" />

    <Button
        style="@style/ButtonFontStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:id="@+id/fragment_deliver_arrival_btn_pending"
        android:background="@drawable/my_button"
        android:text="@string/btn_pending" />

</LinearLayout>