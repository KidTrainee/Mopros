<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="ButtonFontStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="AppWidget.Button" parent="ButtonFontStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@drawable/my_button</item>
    </style>

    <style name="ButtonFontStyleNoMargin">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <style name="TextFontStyleHeader">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppWidget"/>

    <style name="AppWidget.TimeSelectButton">
        <item name="android:layout_height">@dimen/spinner_1_height</item>
        <item name="android:layout_width">@dimen/spinner_1_width</item>
        <item name="android:background">@drawable/bg_spinner_1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:colorForeground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="AppWidget.PaletteSelectButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="AppWidget.MoprosInputNumberEdt">
        <item name="android:digits">@string/digits</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="AppWidget.PickupReportEdt" parent="AppWidget.MoprosInputNumberEdt">
        <item name="android:background">@drawable/bg_transparent_round_border_primary</item>
        <item name="android:layout_width">@dimen/spinner_2_width</item>
        <item name="android:layout_height">@dimen/spinner_2_height</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:hint">0</item>
        <item name="android:maxLength">4</item>
    </style>

    <style name="AppWidget.EditSpinner" parent="AppWidget.MoprosInputNumberEdt">
        <item name="android:layout_width">@dimen/spinner_2_width</item>
        <item name="android:layout_height">@dimen/spinner_2_height</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">3</item>
        <item name="android:hint">0</item>
        <item name="android:background">@drawable/bg_spinner_2</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppWidget.ScrollViewStyle">
        <item name="android:scrollbarThumbVertical">@drawable/scroll_view_thumb_custom</item>
        <item name="android:scrollbarTrackVertical">@drawable/scroll_view_track_custom</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">false</item>
    </style>

    <style name="AppWidget.AppRadioButton">
        <item name="colorAccent">@color/colorBlack</item>
    </style>

    <style name="AppWidget.CompoundSpinner">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/bg_spinner_1</item>
    </style>

    <style name="AppWidget.ExpandView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_left_right_screen</item>
        <item name="android:layout_marginTop">@dimen/padding_left_right_screen</item>
        <item name="android:layout_marginBottom">@dimen/padding_left_right_screen</item>
    </style>

    <string name="digits">0123456789</string>
</resources>
