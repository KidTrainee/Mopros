<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.co.ienter.mopros">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".MoprosApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainMenuActivity"
            android:exported="true"/>
        <activity android:name=".activity.SortActivity" />
        <activity android:name=".activity.StartLoadActivity" />
        <activity android:name=".activity.EndLoadActivity" />
        <activity android:name=".activity.ListTimeActivity" />
        <activity android:name=".activity.LoadSupplierActivity" />
        <activity android:name=".activity.OutOfficeActivity" />
        <activity android:name=".activity.OfficeReportActivity" />
        <activity android:name=".activity.MessageActivity" />
        <activity android:name=".activity.StatusActivity" />
        <activity android:name=".activity.WorkTimeActivity" />
        <activity android:name=".activity.PickUpActivity" />
        <activity android:name=".activity.DeliveryChartActivity" />
        <activity android:name=".activity.deliver_report.TopActivity"
            android:exported="true"/>
    </application>

</manifest>